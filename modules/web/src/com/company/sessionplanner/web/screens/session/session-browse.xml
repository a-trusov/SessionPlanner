<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="sessionsTable"
        messagesPack="com.company.sessionplanner.web.screens.session">
    <data readOnly="true">
        <collection id="sessionsDc"
                    class="com.company.sessionplanner.entity.Session"
                    view="session-browser-view">
            <loader id="sessionsDl">
                <query>
                    <![CDATA[select e from sessionplanner_Session e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="sessionTab"
            spacing="true">
        <filter id="filter"
                applyTo="sessionsTable"
                dataLoader="sessionsDl">
            <properties include=".*"/>
        </filter>
        <tabSheet id="sessionTab">
            <tab caption="Calendar Table"
                 margin="true,false,false,false"
                 spacing="true"
                 id="calendarTab"
                 expand="sessionsCalendar">

                <calendar id="sessionsCalendar"
                          dataContainer="sessionsDc"
                          startDateProperty="startDate"
                          endDateProperty="endDate"
                          captionProperty="topic"
                          descriptionProperty="description"
                          firstVisibleHourOfDay="8"
                          lastVisibleHourOfDay="18"
                          navigationButtonsVisible="true"/>
            </tab>
            <tab caption="Session Table"
                 margin="true,false,false,false"
                 spacing="true"
                 id="tableTab"
                 expand="sessionsTable">
                <groupTable id="sessionsTable"
                            width="100%"
                            dataContainer="sessionsDc">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="topic"/>
                        <column id="startDate"/>
                        <column id="endDate"/>
                        <column id="speaker"/>
                        <column id="description"/>
                    </columns>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn" action="sessionsTable.create"/>
                        <button id="editBtn" action="sessionsTable.edit"/>
                        <button id="removeBtn" action="sessionsTable.remove"/>
                    </buttonsPanel>
                </groupTable>
            </tab>
        </tabSheet>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
